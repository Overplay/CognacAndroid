<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tv.ourglass.alyssa.ourglasstv.tv.ourglass.ourglasstv.Scenes.Settings.EditAccount.EditAccountFragment">

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/edit_account"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        android:background="@color/OGBackgroundGrey">

        <!--<android.support.design.widget.TextInputLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/text_input_layout_height"-->
            <!--android:background="@drawable/edit_underline">-->

            <!--<tv.ourglass.alyssa.bourbon_android.Views.RegularEditText-->
                <!--android:id="@+id/email"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="@dimen/text_input_file_height"-->
                <!--android:background="@android:color/transparent"-->
                <!--android:hint="@string/email"-->
                <!--android:inputType="textEmailAddress"-->
                <!--android:textColor="@color/OGLightGrey" />-->
        <!--</android.support.design.widget.TextInputLayout>-->

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_input_layout_height"
            android:background="@drawable/edit_underline">

            <tv.ourglass.ourglasstv.Views.RegularEditText
                android:id="@+id/firstName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_input_file_height"
                android:background="@android:color/transparent"
                android:hint="@string/firstName"
                android:inputType="textPersonName"
                android:textColor="@color/OGWhite" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_input_layout_height"
            android:background="@drawable/edit_underline">

            <tv.ourglass.ourglasstv.Views.RegularEditText
                android:id="@+id/lastName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/text_input_file_height"
                android:background="@android:color/transparent"
                android:hint="@string/lastName"
                android:inputType="textPersonName"
                android:textColor="@color/OGWhite" />
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <tv.ourglass.ourglasstv.Views.RegularButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/changePasswordButton"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/save"
                android:background="@android:color/transparent"
                android:textColor="@color/OGWhite"
                android:text="@string/change_password"
                android:textAlignment="textStart"/>

            <tv.ourglass.ourglasstv.Views.RegularButton
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:textColor="@color/OGWhite"
                android:text="@string/save"
                android:textAlignment="textEnd" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>


